<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    android:label="nav_graph"
    app:startDestination="@id/navigation">

    <navigation android:id="@+id/navigation"
        app:startDestination="@id/articleFragment">

        <fragment
            android:id="@+id/articleFragment"
            android:name="org.desperu.independentnews.ui.showArticle.fragment.ArticleFragment"
            android:label="ArticleFragment">
            <action
                android:id="@+id/action_articleFragment_to_webFragment"
                app:destination="@id/webFragment" />
            <argument
                android:name="article"
                app:argType="org.desperu.independentnews.models.database.Article"
                app:nullable="true" />
        </fragment>

        <fragment
            android:id="@+id/webFragment"
            android:name="org.desperu.independentnews.ui.showArticle.fragment.WebFragment"
            android:label="WebFragment">
            <action
                android:id="@+id/action_webFragment_to_articleFragment"
                app:destination="@id/navigation" />
            <argument
                android:name="article"
                app:argType="org.desperu.independentnews.models.database.Article"
                app:nullable="true" />
        </fragment>

    </navigation>

</navigation>