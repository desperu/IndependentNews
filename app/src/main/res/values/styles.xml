<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- //////////////////////////////////////////////////////////
    //////////////////////   ***THEMES***   //////////////////////
   ////////////////////////////////////////////////////////// -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- Show article Theme -->
    <style name="ShowArticleTheme" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Show Images Theme -->
    <style name="ShowImages" parent="AppTheme">
        <item name="colorPrimary">@color/colorTransGrey</item>
        <item name="colorPrimaryDark">@color/colorTransGrey</item>
    </style>

    <!-- Settings Theme -->
    <style name="SettingsTheme" parent="ShowArticleTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <!-- //////////////////////////////////////////////////////////
    //////////////////////   ***STYLES***   //////////////////////
   ////////////////////////////////////////////////////////// -->
<!-- TODO rename to styles... -->
    <!-- NAVIGATION VIEW THEME -->
    <style name="NavigationDrawerTheme">
        <item name="android:textSize">@dimen/nav_drawer_text_item_text_size_theme</item>
        <item name="android:textColorSecondary">@color/filter_pill_color</item>
    </style>

    <!-- Progress Bar Theme -->
    <style name="ProgressBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/filter_pill_color</item>
    </style>

    <!-- Progress Bar First Start Theme -->
    <style name="ProgressBarFirstStartTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/list_item_bg_collapsed</item>
    </style>

    <!-- Filter Pill Theme -->
    <style name="FilterPillTheme">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/filter_pill_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/filter_pill_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/filter_pill_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/filter_pill_padding_vertical</item>
        <item name="android:background">@drawable/ic_filter_pill_unselected</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/filter_pill_color</item>
        <item name="android:textColor">@color/list_item_bg_collapsed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <!-- Date Picker Dialog Theme -->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/filter_seek_bar_color</item>
    </style>

    <!-- ALERT DIALOG -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- BUTTON -->
    <style name="AppButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/default_edit_text_size</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:background">@drawable/source_link_button</item>
    </style>

</resources>
