<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <org.desperu.independentnews.views.FontTextView
        android:id="@+id/first_start_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/list_item_bg_collapsed"
        android:textSize="@dimen/no_article_find_text_size"
        android:text="@string/app_name"
        app:fontName="Annie_use_your_telescope"/>

    <org.desperu.independentnews.views.FontTextView
        android:id="@+id/first_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/default_large_margin"
        android:textColor="@color/list_item_bg_collapsed"
        android:textSize="@dimen/toolbar_title_text_size"
        android:text="@string/fragment_first_start_text"
        app:fontName="Annie_use_your_telescope"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/first_start_loading_progress_bar"
        style="?android:attr/progressBarStyleLargeInverse"
        android:layout_width="@dimen/article_loading_progress_bar_width_height"
        android:layout_height="@dimen/article_loading_progress_bar_width_height"
        android:theme="@style/ProgressBarFirstStartTheme" />

        <TextView
            android:id="@+id/first_start_text_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/list_item_bg_collapsed"
            android:text="@string/fragment_first_start_loading"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <org.desperu.independentnews.views.FontTextView
        android:id="@+id/first_start_text_fetch_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/default_large_margin"
        android:textColor="@color/list_item_bg_collapsed"
        android:textSize="@dimen/default_title_size"
        android:text="@string/fragment_first_start_fetch_time"
        app:fontName="Annie_use_your_telescope"/>

</LinearLayout>