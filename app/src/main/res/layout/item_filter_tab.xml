<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_container"
    android:layout_width="@dimen/tab_item_width"
    android:layout_height="@dimen/tabs_height"
    tools:background="@color/tab_bg_color">

    <org.desperu.independentnews.views.FontTextView
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_item_title_height"
        android:gravity="center|center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/tab_title_margin_end"
        android:background="@drawable/ic_pill"
        android:backgroundTint="@color/tab_unselected_color"
        android:textColor="@color/toolbar_title_color"
        android:textSize="@dimen/tab_item_title_text_size"
        app:fontName="Annie_use_your_telescope"
        tools:ignore="UnusedAttribute" />

    <View
        android:id="@+id/tab_badge"
        android:layout_width="@dimen/tab_badge_width"
        android:layout_height="@dimen/tab_badge_height"
        android:layout_alignTop="@id/tab_title"
        android:layout_alignEnd="@id/tab_title"
        android:layout_marginTop="@dimen/tab_badge_margin_top"
        android:layout_marginEnd="@dimen/tab_badge_margin_end"
        android:background="@drawable/tab_badge"
        android:scaleX="0"
        android:scaleY="0"
        tools:scaleX="1"
        tools:scaleY="1" />
</RelativeLayout>